<resources>
    <!-- Tema normal de la app -->
    <style name="Theme.GymTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Opcional: tus colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
    </style>

    <!-- Splash para APIs < 31: puede usar drawable como windowBackground -->
    <style name="Theme.GymTracker.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.GymTracker</item>
    </style>
</resources>
